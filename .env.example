# Dashboard IT - Clínica Bonsana
# Archivo de configuración de ejemplo
# Copiar a .env y configurar con valores reales

# ===========================================
# CONFIGURACIÓN PRINCIPAL
# ===========================================

# API Key de Google AI (Gemini)
# Obtener en: https://makersuite.google.com/app/apikey
GOOGLE_AI_API_KEY=your_google_ai_api_key_here

# Entorno de Flask (development/production)
FLASK_ENV=production

# Secret key para sesiones (generar con: openssl rand -hex 32)
SECRET_KEY=your_very_secret_key_here_change_this_in_production

# ===========================================
# BASE DE DATOS
# ===========================================

# PostgreSQL (Docker)
DATABASE_URL=postgresql://dashboard_user:dashboard_pass@postgres:5432/dashboard_db

# SQLite (desarrollo local)
# DATABASE_URL=sqlite:///dashboard.db

# ===========================================
# REDIS (CACHE Y SESIONES)
# ===========================================

# Redis URL (Docker)
REDIS_URL=redis://redis:6379/0

# Redis con contraseña
# REDIS_URL=redis://:redis_password_change_this@redis:6379/0

# ===========================================
# CONFIGURACIÓN DE LA APLICACIÓN
# ===========================================

# Host y puerto
HOST=0.0.0.0
PORT=5000

# Workers de Gunicorn (producción)
WORKERS=4

# Directorio de datos
DATA_DIRECTORY=data

# Nivel de logs (DEBUG, INFO, WARNING, ERROR, CRITICAL)
LOG_LEVEL=INFO

# Habilitar análisis de IA
AI_ANALYSIS_ENABLED=True

# Límite de tamaño de archivo (MB)
MAX_CONTENT_LENGTH=50

# ===========================================
# CONFIGURACIÓN DE MONITOREO (OPCIONAL)
# ===========================================

# OpenTelemetry
OTEL_EXPORTER_OTLP_ENDPOINT=http://localhost:4317
OTEL_SERVICE_NAME=dashboard-it-bonsana

# Prometheus metrics
PROMETHEUS_METRICS_PORT=10090

# ===========================================
# CONFIGURACIÓN DE EMAIL (OPCIONAL)
# ===========================================

# Servidor SMTP
MAIL_SERVER=smtp.gmail.com
MAIL_PORT=587
MAIL_USE_TLS=True
MAIL_USERNAME=your_email@clinicabonsana.com
MAIL_PASSWORD=your_email_password

# Email por defecto
MAIL_DEFAULT_SENDER=dashboard@clinicabonsana.com

# ===========================================
# CONFIGURACIÓN DE SEGURIDAD
# ===========================================

# Rate limiting
RATELIMIT_ENABLED=True
RATELIMIT_DEFAULT=200 per day, 50 per hour

# CORS
CORS_ORIGINS=*

# Session timeout (minutos)
PERMANENT_SESSION_LIFETIME=1440

# ===========================================
# CONFIGURACIÓN DE BACKUP
# ===========================================

# Directorio de backups
BACKUP_DIRECTORY=backups

# Retención de backups (días)
BACKUP_RETENTION_DAYS=30

# ===========================================
# CONFIGURACIÓN REGIONAL
# ===========================================

# Timezone
TZ=America/Bogota

# Locale
LOCALE=es_CO.UTF-8

# ===========================================
# RUTAS Y URLS
# ===========================================

# URL base de la aplicación (con puerto Docker)
BASE_URL=http://localhost:10080

# URL pública (producción)
# BASE_URL=https://dashboard.clinicabonsana.com

# ===========================================
# DESARROLLO Y DEBUG
# ===========================================

# Modo debug (NUNCA en producción)
DEBUG=False

# Recargar templates automáticamente
TEMPLATES_AUTO_RELOAD=False

# Pretty print JSON
JSONIFY_PRETTYPRINT_REGULAR=True

# ===========================================
# INTEGRACIONES EXTERNAS (OPCIONAL)
# ===========================================

# GLPI API
GLPI_API_URL=http://glpi.clinicabonsana.local/apirest.php
GLPI_API_TOKEN=your_glpi_api_token
GLPI_APP_TOKEN=your_glpi_app_token

# GLPI Base URL para enlaces de tickets
GLPI_BASE_URL=http://192.168.0.92:8080

# Slack (notificaciones)
SLACK_WEBHOOK_URL=https://hooks.slack.com/services/YOUR/WEBHOOK/URL

# Microsoft Teams
TEAMS_WEBHOOK_URL=https://outlook.office.com/webhook/YOUR/WEBHOOK/URL